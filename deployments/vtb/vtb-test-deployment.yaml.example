# VTB API Test Environment Deployment Template
# Copy to vtb-test-deployment.yaml and update with real values

# Namespace
apiVersion: v1
kind: Namespace
metadata:
  name: vtb-test
  labels:
    name: vtb-test
---
# Secret for environment variables
apiVersion: v1
kind: Secret
metadata:
  name: vtb-api-secrets
  namespace: vtb-test
type: Opaque
stringData:
  NODE_ENV: "development"
  METRICS_ENABLED: "true"
  APP_URL: "https://tst.api.visualtourbuilder.com"
  ALLOWED_ORIGINS: "https://tst.api.visualtourbuilder.com,https://visualtourbuilder.com"
  
  # Database (CloudNativePG)
  POSTGRES_HOST: "postgres-rw.postgres.svc.cluster.local"
  POSTGRES_USER: "appuser"
  POSTGRES_PASSWORD: "CHANGE_THIS_DATABASE_PASSWORD"
  POSTGRES_PORT: "5432"
  POSTGRES_DB: "appdb"
  
  # Tenant DB (using same PostgreSQL for test)
  TENANT_DB_HOST: "postgres-rw.postgres.svc.cluster.local"
  TENANT_DB_PORT: "5432"
  TENANT_DB_USERNAME: "appuser"
  TENANT_DB_PASSWORD: "CHANGE_THIS_DATABASE_PASSWORD"
  
  # Stripe (test keys - replace with your own)
  STRIPE_SECRET_KEY: "sk_test_YOUR_STRIPE_TEST_SECRET_KEY"
  STRIPE_WEBHOOK_SECRET: "whsec_YOUR_STRIPE_WEBHOOK_SECRET"
  STRIPE_FRONTEND_SUCCESS_URL: "/settings/subscription/success?session_id={CHECKOUT_SESSION_ID}"
  STRIPE_FRONTEND_CANCEL_URL: "/settings/subscription/cancel"
  
  # Auth0 (replace with your values)
  AUTH0_DOMAIN: "your-tenant.eu.auth0.com"
  AUTH0_MANAGEMENT_DOMAIN: "your-tenant.eu.auth0.com"
  AUTH0_CLIENT_ID: "YOUR_AUTH0_CLIENT_ID"
  AUTH0_CLIENT_SECRET: "YOUR_AUTH0_CLIENT_SECRET"
  AUTH0_AUDIENCE: "YOUR_AUTH0_AUDIENCE"
  
  # API Keys (replace with your keys)
  RECAPTCHA_SECRET_KEY: "YOUR_RECAPTCHA_SECRET_KEY"
  SPOTLER_MAILPLUS_API_BASE_URL: "https://restapi.mailplus.nl/integrationservice"
  SPOTLER_MAILPLUS_CONSUMER_KEY: "YOUR_SPOTLER_CONSUMER_KEY"
  SPOTLER_MAILPLUS_CONSUMER_SECRET: "YOUR_SPOTLER_CONSUMER_SECRET"
  OPENAI_API_KEY: "YOUR_OPENAI_API_KEY"
  UNSPLASH_ACCESS_KEY: "YOUR_UNSPLASH_ACCESS_KEY"
  ABLY_TOKEN: "YOUR_ABLY_TOKEN"
  GITHUB_TOKEN: "YOUR_GITHUB_TOKEN"
  AWS_REGION: "eu-central-1"
  BAS_API_KEY: "YOUR_BAS_API_KEY"
---
# Deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: vtb-api
  namespace: vtb-test
  labels:
    app: vtb-api
    version: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: vtb-api
  template:
    metadata:
      labels:
        app: vtb-api
        version: test
    spec:
      # ARM64 tolerations for Hetzner CAX instances
      tolerations:
      - key: architecture
        value: arm64
        effect: NoSchedule
      containers:
      - name: vtb-api
        image: harbor.travelspirit.cloud/library/api:latest
        ports:
        - containerPort: 3000
          protocol: TCP
        envFrom:
        - secretRef:
            name: vtb-api-secrets
        livenessProbe:
          httpGet:
            path: /health
            port: 3000
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /health
            port: 3000
          initialDelaySeconds: 15
          periodSeconds: 10
          timeoutSeconds: 5
        resources:
          requests:
            memory: "512Mi"
            cpu: "256m"
          limits:
            memory: "768Mi"
            cpu: "512m"
---
# Service
apiVersion: v1
kind: Service
metadata:
  name: vtb-api-service
  namespace: vtb-test
  labels:
    app: vtb-api
spec:
  selector:
    app: vtb-api
  ports:
  - port: 80
    targetPort: 3000
    protocol: TCP
  type: ClusterIP
---
# Ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: vtb-api-ingress
  namespace: vtb-test
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    traefik.ingress.kubernetes.io/router.tls: "true"
    traefik.ingress.kubernetes.io/router.entrypoints: "websecure"
spec:
  ingressClassName: traefik
  tls:
  - hosts:
    - tst.api.visualtourbuilder.com
    secretName: vtb-api-tls-cert
  rules:
  - host: tst.api.visualtourbuilder.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: vtb-api-service
            port:
              number: 80